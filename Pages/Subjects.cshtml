}

<br /> <br />

<div class="container">
  <div class="header-title">
    <h4 class="title is-4">Matérias</h4>
    <button class="button is-info" onclick="Modals.openAndCloseModalSubjects()">
      <span class="icon is-small">
        <img src="~/assets/plus-white.svg" alt="">
      </span>
      <span>Adicionar nova matéria</span>
    </button>
  </div>

  <br />

  <div class="columns">
    <div class="column">
      <div class="boxes">
        <div class="box">
          <button class="button is-small is-warning" onclick="Modals.openAndCloseModalTheme()">
            <span class="icon is-small">
              <img src="~/assets/plus.svg" alt="">
            </span>
            <span>Temas</span>
          </button>

          <span class="span">Leicester City</span>

          <button class="button is-small is-has-primary-light ml-1" onclick="Modals.openAndCloseModalStudy()">
            <span class="icon is-small">
              <img src="~/assets/zoom-in.svg" alt="">
            </span>
            <span>10 estudos</span>
          </button>
        </div>

